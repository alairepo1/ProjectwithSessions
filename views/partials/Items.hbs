<div class="container">
{{# each products}}
	<div class="cartcontainer">
    <div class="row">
        {{# each this}}
            <div class="col">
                <!--Card 1 -->
                <div class="card bg-light">
                        <input type="image" class="card-img-top" src="{{path}}" alt="{{id}}" onclick="itemadded()">
                    <div class="card-body">
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item" id="type">Type: {{type}}</li>
                        <li class="list-group-item" id="name">Name: {{name}}</li>
                        <li class="list-group-item" id="color">Color: {{color}}</li>
                        <li class="list-group-item" id="price">Price: ${{price}}</li>
                    </ul>
                    
					<form action="/add-to-cart" method="post">
						<input type="submit" value="Add to cart" class="btn btn-primary" onclick="itemadded()">
					<input type="hidden" value="{{_id}}" name="objectid">
					</form>
                   
                </div>
                <!--Card 1 end-->
		</div>
        {{/each}}
    </div>
	</div>
{{/each}}
    </div>

